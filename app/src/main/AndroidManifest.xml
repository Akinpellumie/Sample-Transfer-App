<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.interswitchng.interswitchpos" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".POSApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_astra_app_logo"
        android:label="Astra POS APP"
        android:roundIcon="@mipmap/ic_astra_app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning" >
        <activity
            android:name=".views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.fragments.TerminalSettingFragment"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>