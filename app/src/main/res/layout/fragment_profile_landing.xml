<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profilePageBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        tools:context=".views.fragments.ProfileLandingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            style=""
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/astraToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingStart="6dp"
                android:paddingLeft="6dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                app:title="Profile"
                android:clickable="true"
                app:titleTextColor="@color/whiteColor"
                app:contentInsetStartWithNavigation="0dp"
                app:navigationIcon="@drawable/ic_arrow_left"
                android:focusable="true" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <LinearLayout
                    android:id="@+id/btnTab"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <!--        profile btn Tab-->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:padding="0dp"
                        android:layout_weight=".50"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:id="@+id/profileTab"
                            android:background="@drawable/profile_tab_active"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/profileTxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/nimbus_regular"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Profile"
                                android:textColor="@color/whiteColor"
                                android:textSize="20sp"
                                tools:ignore="RelativeOverlap" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!--        change PIN btn Tab-->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:padding="0dp"
                        android:layout_weight=".50"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:id="@+id/changePinTab"
                            android:background="@drawable/profile_tab_inactive"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/pinTxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/nimbus_regular"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:padding="10dp"
                                android:text="Change Pin"
                                android:textColor="@color/txtColor"
                                android:textSize="20sp"
                                tools:ignore="RelativeOverlap" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!--    this Layout is used by the profileTab section-->
                <RelativeLayout
                    android:id="@+id/profileContent"
                    android:visibility="visible"
                    android:layout_below="@+id/btnTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <!--        fullname entry-->
                        <LinearLayout
                            android:id="@+id/fullnameLayout"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/fullnameLbl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/nimbus_regular"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Name"
                                android:textColor="@color/txtColor"
                                android:textSize="20sp"
                                tools:ignore="RelativeOverlap" />
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/fullname"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/rectangle_grey_border"
                                android:hint="@string/logged_in_name"
                                android:inputType="text"
                                android:fontFamily="@font/nimbus_regular"
                                android:paddingLeft="15dp"
                                android:selectAllOnFocus="true"
                                android:paddingStart="15dp"
                                tools:ignore="RtlSymmetry" />
                        </LinearLayout>

                        <!--    email entry    -->
                        <LinearLayout
                            android:id="@+id/emailLayout"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/emailLbl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/nimbus_regular"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Email"
                                android:textColor="@color/txtColor"
                                android:textSize="20sp"
                                tools:ignore="RelativeOverlap" />
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/rectangle_grey_border"
                                android:hint="@string/logged_in_email"
                                android:inputType="text"
                                android:fontFamily="@font/nimbus_regular"
                                android:paddingLeft="15dp"
                                android:selectAllOnFocus="true"
                                android:paddingStart="15dp"
                                android:focusable="false"
                                tools:ignore="RtlSymmetry" />
                        </LinearLayout>

                        <!--    phone entry    -->
                        <LinearLayout
                            android:id="@+id/phoneLayout"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/phoneLbl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/nimbus_regular"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Phone"
                                android:textColor="@color/txtColor"
                                android:textSize="20sp"
                                tools:ignore="RelativeOverlap" />
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phone"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/rectangle_grey_border"
                                android:hint="@string/logged_in_phone"
                                android:inputType="text"
                                android:fontFamily="@font/nimbus_regular"
                                android:paddingLeft="15dp"
                                android:selectAllOnFocus="true"
                                android:paddingStart="15dp"
                                android:focusable="false"
                                tools:ignore="RtlSymmetry" />
                        </LinearLayout>

                        <!--    username entry    -->
                        <LinearLayout
                            android:id="@+id/usernameLayout"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/usernameLbl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/nimbus_regular"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Username"
                                android:textColor="@color/txtColor"
                                android:textSize="20sp"
                                tools:ignore="RelativeOverlap" />
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/astra_username"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/rectangle_grey_border"
                                android:hint="@string/logged_in_username"
                                android:inputType="text"
                                android:fontFamily="@font/nimbus_regular"
                                android:paddingLeft="15dp"
                                android:selectAllOnFocus="true"
                                android:paddingStart="15dp"
                                android:focusable="false"
                                tools:ignore="RtlSymmetry" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


                <!--    this Layout is used by the changePIN tab section-->
                <RelativeLayout
                    android:id="@+id/changePinContent"
                    android:visibility="gone"
                    android:layout_below="@+id/btnTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--        oldPIN entry-->
                    <LinearLayout
                        android:id="@+id/oldPinLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/oldPinLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nimbus_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Old Pin"
                            android:textColor="@color/txtColor"
                            android:textSize="20sp"
                            tools:ignore="RelativeOverlap" />
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/astra_oldpin"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle_grey_border"
                            android:hint="****"
                            android:maxLength="6"
                            android:inputType="numberPassword"
                            android:fontFamily="@font/nimbus_regular"
                            android:paddingLeft="15dp"
                            android:selectAllOnFocus="true"
                            android:paddingStart="15dp"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>

                    <!--    newPIN entry    -->
                    <LinearLayout
                        android:id="@+id/newPinLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/oldPinLayout"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/newPinLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nimbus_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="New Pin"
                            android:textColor="@color/txtColor"
                            android:textSize="20sp"
                            tools:ignore="RelativeOverlap" />
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/astra_newpin"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle_grey_border"
                            android:hint="****"
                            android:maxLength="6"
                            android:inputType="numberPassword"
                            android:fontFamily="@font/nimbus_regular"
                            android:paddingLeft="15dp"
                            android:selectAllOnFocus="true"
                            android:paddingStart="15dp"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>

                    <!--    confirmPIN entry    -->
                    <LinearLayout
                        android:id="@+id/confirmPinLayout"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/newPinLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/confirmPinLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nimbus_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Confirm Pin"
                            android:textColor="@color/txtColor"
                            android:textSize="20sp"
                            tools:ignore="RelativeOverlap" />
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/astra_confirmPin"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle_grey_border"
                            android:hint="****"
                            android:maxLength="6"
                            android:inputType="numberPassword"
                            android:fontFamily="@font/nimbus_regular"
                            android:paddingLeft="15dp"
                            android:selectAllOnFocus="true"
                            android:paddingStart="15dp"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/setPinBtn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="start"
                        android:background="@drawable/button_states"
                        android:enabled="true"
                        android:layout_below="@+id/confirmPinLayout"
                        android:textSize="18sp"
                        android:layout_marginTop="40dp"
                        android:textAllCaps="false"
                        android:textColor="@color/whiteColor"
                        android:text="Set New Pin"/>
                </RelativeLayout>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>


        <!--            Add loader UI Content here-->

        <include
            android:id="@+id/loader"
            android:visibility="gone"
            layout="@layout/layout_progress_bar"/>
    </RelativeLayout>
</layout>