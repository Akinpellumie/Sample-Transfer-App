<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profilePageBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        tools:context=".views.fragments.SetPinLandingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            style=""
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/astraToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingStart="6dp"
                android:paddingLeft="6dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                app:title="Create Pin"
                android:clickable="true"
                app:titleTextColor="@color/whiteColor"
                app:contentInsetStartWithNavigation="0dp"
                android:focusable="true" />
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appBar"
            android:padding="15dp">



        <!--    this Layout is used by the changePIN tab section-->
        <RelativeLayout
            android:id="@+id/changePinContent"
            android:layout_below="@+id/btnTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--        oldPIN entry-->
            <LinearLayout
                android:id="@+id/oldPinLayout"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/otpLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/nimbus_regular"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Enter OTP"
                    android:textColor="@color/txtColor"
                    android:textSize="20sp"
                    tools:ignore="RelativeOverlap" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/astra_otp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rectangle_grey_border"
                    android:hint="****"
                    android:maxLength="6"
                    android:inputType="numberPassword"
                    android:fontFamily="@font/nimbus_regular"
                    android:paddingLeft="15dp"
                    android:selectAllOnFocus="true"
                    android:paddingStart="15dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <!--    newPIN entry    -->
            <LinearLayout
                android:id="@+id/newPinLayout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/oldPinLayout"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/newPinLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/nimbus_regular"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="New Pin"
                    android:textColor="@color/txtColor"
                    android:textSize="20sp"
                    tools:ignore="RelativeOverlap" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/astra_newpin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rectangle_grey_border"
                    android:hint="****"
                    android:maxLength="6"
                    android:inputType="numberPassword"
                    android:fontFamily="@font/nimbus_regular"
                    android:paddingLeft="15dp"
                    android:selectAllOnFocus="true"
                    android:paddingStart="15dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <!--    confirmPIN entry    -->
            <LinearLayout
                android:id="@+id/confirmPinLayout"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/newPinLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/confirmPinLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/nimbus_regular"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Confirm Pin"
                    android:textColor="@color/txtColor"
                    android:textSize="20sp"
                    tools:ignore="RelativeOverlap" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/astra_confirmPin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rectangle_grey_border"
                    android:hint="****"
                    android:maxLength="6"
                    android:inputType="numberPassword"
                    android:fontFamily="@font/nimbus_regular"
                    android:paddingLeft="15dp"
                    android:selectAllOnFocus="true"
                    android:paddingStart="15dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <Button
                android:id="@+id/setPinBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:background="@drawable/button_states"
                android:enabled="true"
                android:layout_below="@+id/confirmPinLayout"
                android:textSize="18sp"
                android:layout_marginTop="40dp"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:text="Set New Pin"/>
        </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


        <!--            Add loader UI Content here-->

        <include
            android:id="@+id/loader"
            android:visibility="gone"
            layout="@layout/layout_progress_bar"/>
    </RelativeLayout>
</layout>