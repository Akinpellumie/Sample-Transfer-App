<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        tools:context=".views.fragments.TransactionsHistoryReceiptFragment">

        <LinearLayout
            android:id="@+id/firstView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical">

                <TableLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_card_bg"
                    android:shrinkColumns="*"
                    android:stretchColumns="2">

                    <TableRow>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:text="Transaction Type:"
                            android:fontFamily="@font/nimbus_bold"
                            android:textSize="@dimen/astrapos_text_size"
                            android:textColor="@color/txtColor"/>

                        <TextView
                            android:id="@+id/transTypeEntry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:textAlignment="textEnd"
                            android:shrinkColumns="*"
                            android:text="Darell Steward"
                            android:fontFamily="@font/nimbus_regular"
                            android:textSize="@dimen/astrapos_text_size"
                            android:textColor="@color/txtColor"
                            android:gravity="end" />
                    </TableRow>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/divider_line" />
                    <TableRow>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:text="Amount:"
                            android:fontFamily="@font/nimbus_bold"
                            android:textSize="@dimen/astrapos_text_size"
                            android:textColor="@color/txtColor"/>

                        <TextView
                            android:id="@+id/amountEntryR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:textAlignment="textEnd"
                            android:shrinkColumns="*"
                            android:text="NGN 200"
                            android:fontFamily="@font/nimbus_regular"
                            android:textSize="@dimen/astrapos_text_size"
                            android:textColor="@color/txtColor"
                            android:gravity="end" />
                    </TableRow>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/divider_line" />
                    <TableRow>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:text="Transaction Id:"
                            android:fontFamily="@font/nimbus_bold"
                            android:textSize="10sp"
                            android:textColor="@color/txtColor"/>

                        <TextView
                            android:id="@+id/transIdEntry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:textAlignment="textEnd"
                            android:shrinkColumns="*"
                            android:text="Withdrawer"
                            android:fontFamily="@font/nimbus_regular"
                            android:textSize="@dimen/astrapos_text_size"
                            android:textColor="@color/txtColor"
                            android:gravity="end" />
                    </TableRow>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/divider_line" />
                    <TableRow>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:text="Status:"
                            android:fontFamily="@font/nimbus_bold"
                            android:textSize="@dimen/astrapos_text_size"
                            android:textColor="@color/txtColor"/>

                        <TextView
                            android:id="@+id/statusEntry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:textAlignment="textEnd"
                            android:shrinkColumns="*"
                            android:text="22123212223"
                            android:fontFamily="@font/nimbus_regular"
                            android:textSize="@dimen/astrapos_text_size"
                            android:textColor="@color/txtColor"
                            android:gravity="end" />
                    </TableRow>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/divider_line" />
                    <TableRow>

                    </TableRow>


                </TableLayout>


            </LinearLayout>



            <Button
                android:id="@+id/printReceiptBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="start"
                android:background="@drawable/button_states"
                android:enabled="true"
                android:fontFamily="@font/nimbus_regular"
                android:textSize="18sp"
                android:layout_marginTop="40dp"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:autoSizeMinTextSize="18dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                android:text="Reprint Receipt"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/printReceipt"
                app:layout_constraintStart_toStartOf="@+id/printReceipt"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"

                    app:layout_constraintTop_toBottomOf="@+id/printReceipt"
                    app:layout_constraintStart_toStartOf="@id/printReceipt">

                    <!--                <ImageView-->
                    <!--                    android:id="@+id/rightIcon"-->
                    <!--                    android:layout_width="20dp"-->
                    <!--                    android:layout_height="20dp"-->
                    <!--                    android:layout_marginLeft="10dp"-->
                    <!--                    android:layout_gravity="center"-->
                    <!--                    app:srcCompat="@drawable/ic_share_icon"-->
                    <!--                    android:contentDescription=" share icon" />-->
                    <!--                <com.google.android.material.textview.MaterialTextView-->
                    <!--                    android:id="@+id/exportEmail"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:textSize="20sp"-->
                    <!--                    android:fontFamily="@font/roboto_bold"-->
                    <!--                    android:layout_gravity="start"-->
                    <!--                    android:gravity="start"-->
                    <!--                    android:textColor="@color/blackColor"-->
                    <!--                    android:layout_marginLeft="10dp"-->
                    <!--                    android:text="Share Receipt" />-->



                </LinearLayout>

            </LinearLayout>
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>