<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.AirtimeRechargeSummaryFragment">

        <LinearLayout
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">

            <TableLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_card_bg"
                android:shrinkColumns="*"
                android:stretchColumns="2">

                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:text="Type:"
                        android:fontFamily="@font/nimbus_bold"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"/>

                    <TextView
                        android:id="@+id/typeTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:textAlignment="textEnd"
                        android:shrinkColumns="*"
                        android:text="MTN Recharge"
                        android:fontFamily="@font/nimbus_regular"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"
                        android:gravity="end" />
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divider_line" />
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:text="Amount:"
                        android:fontFamily="@font/nimbus_bold"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"/>

                    <TextView
                        android:id="@+id/amountTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:textAlignment="textEnd"
                        android:shrinkColumns="*"
                        android:text="NGN 2,000"
                        android:fontFamily="@font/nimbus_regular"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"
                        android:gravity="end" />
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divider_line" />

                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:text="Phone Number:"
                        android:fontFamily="@font/nimbus_bold"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"/>

                    <TextView
                        android:id="@+id/phoneTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:textAlignment="textEnd"
                        android:shrinkColumns="*"
                        android:text="08123455455"
                        android:fontFamily="@font/nimbus_regular"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"
                        android:gravity="end" />
                </TableRow>


            </TableLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agent's Pin"
                android:textColor="@color/txtColor"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/astrapos_text_size"

                android:fontFamily="@font/nimbus_bold" />

            <EditText
                android:id="@+id/pinEv"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_grey_border"
                android:hint=""
                android:textSize="@dimen/astrapos_text_size"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:fontFamily="@font/nimbus_regular"
                android:selectAllOnFocus="true" />

        </LinearLayout>

        <Button
            android:id="@+id/setPin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="start"
            android:background="@drawable/button_states"
            android:enabled="true"
            android:layout_below="@+id/confirmPinLayout"
            android:fontFamily="@font/nimbus_regular"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:textAllCaps="false"
            android:textColor="@color/whiteColor"
            android:autoSizeMinTextSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/pin"
            app:layout_constraintStart_toStartOf="@+id/pin"
            android:text="Buy Airtime"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>