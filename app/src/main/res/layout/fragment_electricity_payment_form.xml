<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.ElectricityPaymentFormFragment">

        <TextView
            android:id="@+id/electricityCompany"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="start"
            android:text="@string/IBDEC"
            android:fontFamily="@font/nimbus_bold"
            android:textSize="14sp"
            android:layout_marginStart="20dp" />

        <LinearLayout
            android:id="@+id/customerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toBottomOf="@+id/electricityCompany"
            app:layout_constraintStart_toStartOf="@+id/rechargeType"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Id"
                android:textColor="@color/txtColor"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/astrapos_text_size"
                android:fontFamily="@font/nimbus_regular" />

            <EditText
                android:id="@+id/customerIdEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_grey_border"
                android:hint="XXX XXX XXXX"
                android:textSize="@dimen/astrapos_text_size"
                android:maxLength="11"
                android:inputType="number"
                android:padding="15dp"
                android:fontFamily="@font/nimbus_regular"
                android:selectAllOnFocus="true" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toBottomOf="@+id/customerId"
            app:layout_constraintStart_toStartOf="@+id/rechargeType"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/txtColor"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/astrapos_text_size"
                android:fontFamily="@font/nimbus_regular" />

            <EditText
                android:id="@+id/phoneNumberEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_grey_border"
                android:hint="XXX XXX XXXX"
                android:textSize="@dimen/astrapos_text_size"
                android:maxLength="11"
                android:inputType="number"
                android:padding="15dp"
                android:fontFamily="@font/nimbus_regular"
                android:selectAllOnFocus="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toBottomOf="@+id/customerName"
            app:layout_constraintStart_toStartOf="@+id/phoneNumber"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="@color/txtColor"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/astrapos_text_size"

                android:fontFamily="@font/nimbus_regular" />

            <EditText
                android:id="@+id/electricityAmountEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_grey_border"
                android:hint="NGN 0.00"
                android:textSize="@dimen/astrapos_text_size"
                android:inputType="number"
                android:padding="15dp"
                android:fontFamily="@font/nimbus_regular"
                android:selectAllOnFocus="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/customerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
            app:layout_constraintStart_toStartOf="@+id/phoneNumber"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textColor="@color/txtColor"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/astrapos_text_size"

                android:fontFamily="@font/nimbus_regular" />

            <EditText
                android:id="@+id/customerNameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_grey_border"
                android:hint="Customer name"
                android:focusable="false"
                android:textSize="@dimen/astrapos_text_size"
                android:inputType="number"
                android:padding="15dp"
                android:fontFamily="@font/nimbus_regular"
                android:selectAllOnFocus="true" />

        </LinearLayout>



        <Button
            android:id="@+id/initElectricityPayBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="start"
            android:background="@drawable/button_states"
            android:enabled="true"
            android:fontFamily="@font/nimbus_regular"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:textAllCaps="false"
            android:textColor="@color/whiteColor"
            android:autoSizeMinTextSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/amount"
            app:layout_constraintStart_toStartOf="@+id/amount"
            android:text="Initiate Recharge"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>