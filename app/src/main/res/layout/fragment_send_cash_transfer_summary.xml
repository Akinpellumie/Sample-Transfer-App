<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        tools:context=".views.fragments.SendCashTransferSummaryFragment">

        <com.google.android.material.appbar.AppBarLayout
            style=""
            android:id="@+id/appBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/isw_transfer_search_dialog_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingStart="6dp"
                android:paddingLeft="6dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                app:title="Transfer Summary"
                app:titleTextColor="@color/whiteColor"
                app:contentInsetStartWithNavigation="0dp"
                app:navigationIcon="@drawable/ic_arrow_left" />
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/appBar"
            android:orientation="vertical">

            <TableLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_card_bg"
                android:shrinkColumns="*"
                android:stretchColumns="2">

                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:text="Type:"
                        android:fontFamily="@font/nimbus_bold"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"/>

                    <TextView
                        android:id="@+id/transType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:textAlignment="textEnd"
                        android:shrinkColumns="*"
                        android:text="DsTV Subscription"
                        android:fontFamily="@font/nimbus_regular"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"
                        android:gravity="end" />
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divider_line" />
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:text="Amount:"
                        android:fontFamily="@font/nimbus_bold"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"/>

                    <TextView
                        android:id="@+id/transAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:textAlignment="textEnd"
                        android:shrinkColumns="*"
                        android:text="NGN 2,000"
                        android:fontFamily="@font/nimbus_regular"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"
                        android:gravity="end" />
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divider_line" />
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:text="Account No:"
                        android:fontFamily="@font/nimbus_bold"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"/>

                    <TextView
                        android:id="@+id/transAcctNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:textAlignment="textEnd"
                        android:shrinkColumns="*"
                        android:text="DsTV Compact"
                        android:fontFamily="@font/nimbus_regular"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"
                        android:gravity="end" />
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divider_line" />
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:text="Account Name:"
                        android:fontFamily="@font/nimbus_bold"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"/>

                    <TextView
                        android:id="@+id/transAcctName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:textAlignment="textEnd"
                        android:shrinkColumns="*"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:fontFamily="@font/nimbus_regular"
                        android:textSize="12sp"
                        android:textColor="@color/txtColor"
                        android:gravity="end" />
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divider_line" />
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:text="Narration:"
                        android:fontFamily="@font/nimbus_bold"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"/>

                    <TextView
                        android:id="@+id/transNarration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:textAlignment="textEnd"
                        android:shrinkColumns="*"
                        android:text="08123455455"
                        android:fontFamily="@font/nimbus_regular"
                        android:textSize="@dimen/astrapos_text_size"
                        android:textColor="@color/txtColor"
                        android:gravity="end" />
                </TableRow>


            </TableLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@id/cardView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agent's Pin"
                android:textColor="@color/txtColor"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/astrapos_text_size"

                android:fontFamily="@font/nimbus_bold" />

            <EditText
                android:id="@+id/pinEntry"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/text_white_bg"
                android:hint="******"
                android:textSize="@dimen/astrapos_pin_placeholder_text_size"
                android:inputType="numberPassword"
                android:padding="15dp"
                android:fontFamily="@font/nimbus_bold"
                android:selectAllOnFocus="true" />

        </LinearLayout>

        <Button
            android:id="@+id/completeTransferBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="start"
            android:background="@drawable/button_states"
            android:enabled="true"
            android:layout_below="@+id/pin"
            android:fontFamily="@font/nimbus_regular"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:textAllCaps="false"
            android:textColor="@color/whiteColor"
            android:text="@string/make_transfer"/>


        <!--            Add you UI Content here-->

        <include
            android:id="@+id/loader"
            android:visibility="gone"
            layout="@layout/layout_progress_bar"/>
    </RelativeLayout>
</layout>