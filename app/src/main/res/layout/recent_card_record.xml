<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/listCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="15dp"
                    android:layout_weight=".15"
                    android:layout_gravity="center"
                    android:background="@drawable/list_icon_bg"
                    app:srcCompat="@drawable/ic_listicon"
                    android:contentDescription="@string/astra_logo" />

            <LinearLayout
                android:id="@+id/txtDetail"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_weight=".65"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/txtColor"
                    android:text="Transaction Type"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/trans_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/txtColor"
                    android:text="6th October, 2021"/>
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/transAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_weight=".20"
                android:fontFamily="@font/nimbus_bold"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/txtColor"
                android:text="-NGN 500"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>