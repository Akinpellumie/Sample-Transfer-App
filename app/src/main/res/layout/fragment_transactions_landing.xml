<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.TransactionsLandingFragment">

    <!--main content for transaction list page-->
        <RelativeLayout
            android:id="@+id/transMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:background="@color/backgroundColor">

            <LinearLayout
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/searchBar"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight=".95"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rectangle_grey_border">
                    <ImageView
                        android:id="@+id/searchIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ic_search"
                        android:contentDescription="search icon" />
                    <EditText
                        android:id="@+id/searchEntry"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:hint="Search"
                        android:inputType="number"
                        android:layout_toRightOf="@+id/searchIcon"
                        android:selectAllOnFocus="true"
                        android:paddingLeft="15dp"
                        android:layout_toEndOf="@+id/searchIcon"
                        android:paddingStart="15dp" />
                </RelativeLayout>

                <!--            filter icon section-->
                <ImageView
                    android:id="@+id/filterIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_weight=".05"
                    android:clickable="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/ic_filter"
                    android:background="@drawable/button"
                    android:contentDescription="@string/filter_icon"
                    android:focusable="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/TransHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstRow"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/here"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/blackColor"
                        android:text="Transactions"
                        android:layout_alignParentLeft="true" />

<!--                    <LinearLayout-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:orientation="horizontal"-->
<!--                        android:clickable="true"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        android:layout_alignParentRight="true">-->

<!--                        <com.google.android.material.textview.MaterialTextView-->
<!--                            android:id="@+id/exportEmail"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:textSize="20sp"-->
<!--                            android:fontFamily="@font/roboto_bold"-->
<!--                            android:layout_gravity="start"-->
<!--                            android:gravity="start"-->
<!--                            android:textColor="@color/blackColor"-->
<!--                            android:text="Expand to email" />-->
<!--                        <ImageView-->
<!--                            android:id="@+id/rightIcon"-->
<!--                            android:layout_width="15dp"-->
<!--                            android:layout_height="15dp"-->
<!--                            android:layout_marginLeft="10dp"-->
<!--                            android:layout_gravity="center"-->
<!--                            app:srcCompat="@drawable/ic_righticon"-->
<!--                            android:contentDescription="right icon" />-->


<!--                    </LinearLayout>-->

                </RelativeLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/lineColor"/>
            </LinearLayout>

            <!-- Recyclerview: shows items-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentTransItemRv"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/TransHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/recent_card_record"
                android:paddingBottom="20dp"
                android:clipToPadding="false"/>
        </RelativeLayout>

    <!--        overlay filter transaction list-->
        <LinearLayout
            android:id="@+id/cardFilterView"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/fadeBgColor"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dash_bg"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".60"
                        android:fontFamily="@font/nimbus_regular"
                        android:gravity="center_horizontal"
                        android:text="Filters"
                        android:textColor="@color/txtColor"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/closePopUpBtn"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="start"
                        app:srcCompat="@drawable/ic_x_circle"
                        android:contentDescription="x_circle_icon" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/transactionType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:fontFamily="@font/nimbus_regular"
                        android:gravity="center_horizontal"
                        android:padding="20dp"
                        android:textStyle="bold"
                        android:text="Transaction Type"
                        android:textColor="@color/txtColor"
                        android:textSize="20dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/mainCheckbox"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </CheckBox>
                        <TextView
                            android:id="@+id/filterTextTransfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:fontFamily="@font/nimbus_regular"
                            android:text="Transfer"
                            android:textSize="20dp"
                            android:textColor="@color/txtColor"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </CheckBox>
                        <TextView
                            android:id="@+id/filterTextWithdrawar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:fontFamily="@font/nimbus_regular"
                            android:text="Withdrawar"
                            android:textSize="20dp"
                            android:textColor="@color/txtColor"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </CheckBox>
                        <TextView
                            android:id="@+id/filterTextBillPayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:fontFamily="@font/nimbus_regular"
                            android:text="Bill Payment"
                            android:textSize="20dp"
                            android:textColor="@color/txtColor"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </CheckBox>
                        <TextView
                            android:id="@+id/filterTextDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:fontFamily="@font/nimbus_regular"
                            android:text="Date"
                            android:textSize="20dp"
                            android:textColor="@color/txtColor"
                            />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fromDateFilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    app:layout_constraintTop_toBottomOf="@+id/subscriptionType"
                    app:layout_constraintStart_toStartOf="@+id/subscriptionType"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fromTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="From"
                        android:textColor="@color/txtColor"
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/astrapos_text_size"
                        android:fontFamily="@font/nimbus_regular" />

                    <EditText
                        android:id="@+id/fromInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="120dp"
                        android:background="@drawable/rectangle_grey_border"
                        android:hint="XX-XX-XXXX"
                        android:textSize="@dimen/astrapos_text_size"
                        android:inputType="text"
                        android:padding="15dp"
                        android:fontFamily="@font/nimbus_regular"
                        android:selectAllOnFocus="true" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/toDateFilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    app:layout_constraintTop_toBottomOf="@+id/subscriptionType"
                    app:layout_constraintStart_toStartOf="@+id/subscriptionType"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/toTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="To"
                        android:textColor="@color/txtColor"
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/astrapos_text_size"
                        android:fontFamily="@font/nimbus_regular" />

                    <EditText
                        android:id="@+id/toInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="120dp"
                        android:background="@drawable/rectangle_grey_border"
                        android:hint="XX-XX-XXXX"
                        android:textSize="@dimen/astrapos_text_size"
                        android:inputType="text"
                        android:padding="15dp"
                        android:fontFamily="@font/nimbus_regular"
                        android:selectAllOnFocus="true" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/applyFilterMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/applyButtonMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".70"
                        >
                        <Button
                            android:id="@+id/applyFilter"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"

                            android:layout_marginLeft="20dp"
                            android:layout_gravity="start"
                            android:background="@drawable/button_states"
                            android:enabled="true"
                            android:fontFamily="@font/nimbus_regular"
                            android:textSize="18sp"
                            android:textAllCaps="false"
                            android:textColor="@color/whiteColor"
                            android:text="Apply Filter"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/cancelButtonMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        >
                        <Button
                            android:id="@+id/cancelFilter"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="start"
                            android:background="@color/zxing_transparent"
                            android:enabled="true"
                            android:fontFamily="@font/nimbus_regular"
                            android:textSize="18sp"
                            android:textAllCaps="false"
                            android:textColor="@color/subTxtColor"
                            android:autoSizeMinTextSize="18dp"

                            android:text="Clear"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>