                    android:id="@+id/navigateCableTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_chevron_right"
                    app:tint="@color/whiteColor" />
            </LinearLayout>

        </LinearLayout>

        <!--    data services section-->

