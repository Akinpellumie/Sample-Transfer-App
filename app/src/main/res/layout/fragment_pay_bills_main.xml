        <!--    cable tv section-->

        <LinearLayout
            android:id="@+id/cableCard"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:padding="25dp"
            android:clickable="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            app:layout_constraintTop_toBottomOf="@+id/airtimeCard"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/card_bg_billpay"
            android:focusable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_weight=".75"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cableImg"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_television"
                    app:tint="@color/whiteColor" />
                <TextView
                    android:id="@+id/cableTv"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10dp"
                    android:lines="2"
                    android:textColor="@color/whiteColor"
                    android:textSize="14dp"
                    android:text="Cable Tv"
                    android:fontFamily="@font/nimbus_regular" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
